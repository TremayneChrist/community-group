{
  "brand": {
    "palette": {
      "charcoal": {
        "value": "#212529",
        "type": "color"
      },
      "gold": {
        "value": "#f59f00",
        "type": "color"
      },
      "cornflower-blue": {
        "value": "#339af0",
        "type": "color"
      }
    },

    "typeface": {
      "primary": {
        "value": "Helvetica Neue",
        "type": "font"
      },
      "secondary": {
        "value": "Inter",
        "type": "font"
      }
    }
  },


  "text-size": {
    "scale": {
      "0": {
        "value": "1rem",
        "type": "dimension"
      },
      "1": {
        "value": "1.25rem",
        "type": "dimension"
      },
      "2": {
        "value": "1.563rem",
        "type": "dimension"
      },
      "3": {
        "value": "1.953rem",
        "type": "dimension"
      }
    },

    "title": {
      "value": "{text-size.scale.3}",
      "type": "dimension"
    },
    "heading": {
      "value": "{text-size.scale.2}",
      "type": "dimension"
    },
    "body-copy": {
      "value": "{text-size.scale.0}",
      "type": "dimension"
    }
  },


  "color":{
    "text": {
      "value": "{brand.palette.charcoal}",
      "type": "color"
    },
    "accent": {
      "value": "{brand.palette.gold}",
      "type": "color"
    }
  },


  "my-types": {
    "text-style": {
      "type": "typedef",
      "value": {
        "size": {
          "type": "dimension",
          "required": true
        },
        "color": {
          "type": "color",
          "required": true
        },
        "font": {
          "type": "font",
          "required": true
        },
        "weight": {
          "type": "font-weight",
          "required": true
        },
        "line-height": {
          "type": "dimension",
          "required": true
        }
      }
    }
  },



  "text-style": {
    "heading": {
      "type": "{my-types.text-style}",
      "value": {
        "size": "{text-size.heading}",
        "color": "{color.text}",
        "font": "{brand.typeface.primary}",
        "weight": 700,
        "line-height": 1.2
      }
    },

    "paragraph": {
      "type": "{my-types.text-style}",
      "value": {
        "size": "{text-size.body-copy}",
        "color": "{color.text}",
        "font": "{brand.typeface.secondary}",
        "weight": 400,
        "line-height": 1.5
      }
    }
  }
}
